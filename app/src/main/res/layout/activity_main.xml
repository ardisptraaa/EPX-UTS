<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/AgakPutih"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ardi.pantheon.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/AgakPutih">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="5"

                    android:background="@drawable/buatlengkung"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:padding="20dp"
                        android:background="#fff"
                        android:layout_margin="20dp"
                        >

                        <TextView
                            android:id="@+id/textpanjang"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:layout_marginTop="23dp"
                            android:text="Panjang"
                            android:textSize="20dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_below="@+id/textpanjang"
                            android:id="@+id/editpanjang"
                            />


                        <TextView
                            android:id="@+id/textlebar"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/textpanjang"
                            android:layout_alignRight="@+id/textpanjang"
                            android:layout_below="@+id/editpanjang"
                            android:layout_marginTop="20dp"
                            android:text="Lebar"
                            android:textSize="20dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/editlebar"
                            android:layout_below="@+id/textlebar"

                            />


                    </RelativeLayout>

                    <Button
                        android:layout_width="129dp"
                        android:layout_height="45dp"
                        android:text="Luas"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/buttonluas"
                        />

                    <Button
                        android:layout_width="129dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:text="Keliling"
                        android:id="@+id/buttonkeliling"

                        />


                </LinearLayout>




            </LinearLayout>











        </LinearLayout>

    </RelativeLayout>




